# Database
DATABASE_URL=postgresql://user:password@localhost:5432/sillytavern_saas
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Server
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# Storage
STORAGE_TYPE=local
STORAGE_PATH=./uploads
# S3_BUCKET=
# S3_REGION=
# S3_ACCESS_KEY=
# S3_SECRET_KEY=

# LLM Providers (optional)
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
ANTHROPIC_API_KEY=
ANTHROPIC_BASE_URL=https://api.anthropic.com/v1

# Custom LLM Provider (optional)
CUSTOM_LLM_API_KEY=
CUSTOM_LLM_BASE_URL=
CUSTOM_LLM_MODELS=model1,model2,model3
CUSTOM_LLM_DEFAULT_MODEL=model1

# Stripe Configuration
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# Webhook secret - get from Stripe CLI or Dashboard webhook settings
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Price IDs - create products in Stripe Dashboard and copy price IDs
# Pro Plan: $19.99/month or $199.99/year
STRIPE_PRICE_PRO_MONTHLY=price_your_pro_monthly_id
STRIPE_PRICE_PRO_YEARLY=price_your_pro_yearly_id

# Team Plan: $99.99/month
STRIPE_PRICE_TEAM_MONTHLY=price_your_team_monthly_id

# Monitoring (optional)
SENTRY_DSN=

# Production Deployment Notes:
# 1. Change JWT_SECRET to a secure random string (min 32 characters)
# 2. Use strong passwords for DATABASE_URL
# 3. Configure Stripe keys for subscription features
# 4. Set NODE_ENV=production for production deployments
# 5. Consider using managed services for PostgreSQL and Redis
# 6. Enable SENTRY_DSN for error tracking in production
